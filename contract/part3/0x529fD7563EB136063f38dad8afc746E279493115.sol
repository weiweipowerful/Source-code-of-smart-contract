contract AmazonDigitalAssetPresale is Ownable {
    using SafeMath for uint256;

    address public saleToken;
    uint256 public totalTokensForSale;
    uint256 public totalTokensSold;
    uint256 public constant TOKEN_PRICE_USD = 4 * 10**18;
    AggregatorV3Interface public priceFeed;
    mapping(address => uint256) public buyerPurchasedAmount;
    bool public isPresaleStarted;

    event TokensPurchased(address indexed buyer, uint256 ethAmount, uint256 tokenAmount);
    event PresaleStarted();
    event PresaleStopped();

    constructor(address _priceFeed, address initialOwner) Ownable(initialOwner) {
        require(_priceFeed != address(0));
        priceFeed = AggregatorV3Interface(_priceFeed);
        isPresaleStarted = false;
    }

    function setSaleTokenParams(address _saleToken, uint256 _totalTokensForSale) external onlyOwner {
        require(_saleToken != address(0));
        require(_totalTokensForSale > 0);
        require(IERC20(_saleToken).allowance(msg.sender, address(this)) >= _totalTokensForSale);
        saleToken = _saleToken;
        totalTokensForSale = _totalTokensForSale;
        require(IERC20(_saleToken).transferFrom(msg.sender, address(this), _totalTokensForSale));
    }

    function startPresale() external onlyOwner {
        require(!isPresaleStarted);
        isPresaleStarted = true;
        emit PresaleStarted();
    }

    function stopPresale() external onlyOwner {
        require(isPresaleStarted);
        isPresaleStarted = false;
        emit PresaleStopped();
    }

    function getEthUsdPrice() public view returns (uint256) {
        (, int256 price, , , ) = priceFeed.latestRoundData();
        require(price > 0);
        return uint256(price);
    }

    function getTokenAmount(uint256 _ethAmount) public view returns (uint256) {
        if (!isPresaleStarted) return 0;
        uint256 ethPriceUsd = getEthUsdPrice();
        uint256 usdAmount = _ethAmount.mul(ethPriceUsd).div(10**8);
        uint256 tokenAmount = usdAmount.mul(10**18).div(TOKEN_PRICE_USD);
        return tokenAmount;
    }

    function buyToken() external payable {
        require(isPresaleStarted);
        require(msg.value > 0);
        uint256 tokenAmount = getTokenAmount(msg.value);
        require(tokenAmount > 0);
        require(totalTokensSold.add(tokenAmount) <= totalTokensForSale);
        totalTokensSold = totalTokensSold.add(tokenAmount);
        buyerPurchasedAmount[msg.sender] = buyerPurchasedAmount[msg.sender].add(tokenAmount);
        require(IERC20(saleToken).transfer(msg.sender, tokenAmount));
        emit TokensPurchased(msg.sender, msg.value, tokenAmount);
    }

    function withdrawCurrency(uint256 amt) external onlyOwner {
        require(address(this).balance >= amt);
        payable(msg.sender).transfer(amt);
    }

    function withdrawTokens(address token, uint256 amt) external onlyOwner {
        require(IERC20(token).transfer(msg.sender, amt));
    }
}